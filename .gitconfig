[user]
    name = Oscar Del Ben
    email = info@oscardelben.com

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    hp = "!source ~/bin/githelpers && show_git_head"
    l = "!source ~/bin/githelpers && pretty_git_log"
    la = !git l --all


[core]
    editor = vim
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /Users/oscardelben/.gitignore

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[apply]
    whitespace = fix


